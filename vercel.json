{
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 256,
      "maxDuration": 30,
      "includeFiles": "api/_*.ts"
    }
  },
  "crons": [
    {
      "path": "/api/ops/compliance-check",
      "schedule": "0 23 * * *"
    }
  ]
}
